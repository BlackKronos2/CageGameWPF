<Window x:Class="CageGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CageGame"
        mc:Ignorable="d"
        Title="Игра" Height="559" Width="930" ResizeMode="NoResize" Closed="Window_Closed">

    <Grid>
        <Canvas x:Name="MapUI" Height="532" Width="850" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="94" Canvas.Top="85">
            <Label x:Name="ObjectsCount" Content="Осталось объектов: 0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Width="214" IsEnabled="False" Background="Black" Foreground="White" Height="34"/>
            <Label x:Name="TimerText" Content="Осталось объектов: 0" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Top" Width="214" IsEnabled="False" Background="Black" Foreground="White" Height="34" Canvas.Left="214"/>
        </Canvas>
        <Canvas x:Name="Map" Height="466.9" Width="850" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black" Canvas.Left="94" Canvas.Top="85"/>
    </Grid>
</Window>
